<Window x:Class="MebelCourseWPF.DocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MebelCourseWPF"
        mc:Ignorable="d"
        Title="DocumentWindow" Height="400" Width="400">

    <Window.Background>
        <ImageBrush ImageSource="Images/tree_back.jpg"></ImageBrush>
    </Window.Background>

    <StackPanel>
        <Label Margin="20" FontSize="18" FontWeight="Bold" Foreground="#513C2F" HorizontalAlignment="Center">Менеджер:</Label>
        <ComboBox x:Name="managerBox" Margin="20 0 20 0" Width="300" Background="#FDD48A" FontSize="12"></ComboBox>
        <Button Margin="50 50 50 25" Height="50" Width="300" Click="FirstDoc" FontSize="22" FontWeight="Bold" Background="#83D350" Foreground="#513C2F" BorderBrush="#513C2F">Товарная накладная</Button>
        <Button Margin="50 25 50 50" Height="50" Width="300" Click="SecondDoc" FontSize="22" FontWeight="Bold" Background="#83D350" Foreground="#513C2F" BorderBrush="#513C2F">Акт об оказании услуг</Button>
    </StackPanel>
</Window>
